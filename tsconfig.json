{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "types": ["react-native", "node"],
    "typeRoots": ["@types", "./node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@types/*": ["./src/types/*"],
      "@store/*": ["./src/store/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@stacks/*": ["./src/stacks/*"],
      "@screens/*": ["./src/screens/*"],
      "@components/*": ["src/components/*"],
      "@theme/*": ["./src/theme/*"],
      "@utils/*": ["./src/utils/*"],
      "@assets/*": ["./assets/*"],
      "@declarations/": ["./src/declarations"]
    }
  },
  "include": ["src/**/*", "**/*.js", "**/*.ts", "**/*.tsx", "src/**/*.ts", "src/types"],
  "exclude": ["node_modules", "dist"]
}
